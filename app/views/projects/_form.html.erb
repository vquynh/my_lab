<%= form_for(@project) do |form| %>

        <div class="form-row">
          <div class="form-group col-12">
            <%= form.label :name %><br />
            <%= form.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group col-md-6">
            <%= form.label :main_image %>
            <%= form.file_field :main_image, class:'form-control-file' %>
          </div>
          <div class="form-group col-md-6">
            <%= form.label :thumb_image %>
            <%= form.file_field :thumb_image, class:'form-control-file' %>
          </div>
          <div class="form-group col-12">
            <%= form.label :description %><br />
            <%= form.text_area :description, autofocus: true, class: "form-control", rows: '3'  %>
          </div>
        </div>
        <%= form.submit "Save", class: 'btn btn-primary' %>

<% end %>
