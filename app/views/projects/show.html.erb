<div class="container ml-content">
  <div class="row padding-top">
    <div class="col-md-7">
      <%= image_tag project_img(@project.main_image, 'main'), width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1><%= @project.name %></h1>
      <p><%= @project.description %></p>
      <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-primary" if logged_in?(:labor_staff) %>
      <%= link_to 'See all projects', projects_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <div class="row padding-top">
    <div class="col-md-12">
      <% if @usually_booked_items.size == 0  %>
          <span class="headline">No equipment has been booked for this project. Be the first?</span>
          <span><%= link_to "See all equipment", equipment_index_path, class: "btn btn-outline-primary" %></span>
      <% else %>
          <div class="headline">Student who choose this project usually book:</div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @usually_booked_items.each do |usually_booked_item| %>
        <div class="home-card">
          <%= image_tag usually_booked_item.thumb_image unless usually_booked_item.thumb_image.nil? %>
          <p class="home-card-text"><%= link_to usually_booked_item.name, equipment_path(usually_booked_item)  %></p>
          <p class="home-card-text"><%= usually_booked_item.description %></p>
        </div>
    <% end %>
  </div>
</div>


