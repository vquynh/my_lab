
<div class="container ml-content">
  <h3 class="card-title">Edit Booking Details </h3>
  <div class="row">
    <div class="col-md-6">
      <%= render "form", booking: @booking %>
    </div>
    <div class="col-md-6">
      <h5>Equipment list:</h5>
      <% @booking_items.each do |booking_item| %>
        <%= render 'list/list_row', booking_item: booking_item, labor_item: booking_item.equipment %>
      <% end %>
    </div>
  </div>

</div> 