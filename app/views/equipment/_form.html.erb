<%= form_for(@labor_item) do |f| %>

    <div class="card">
    <div class="card-block">
      <h1 class="card-title"> Edit equipment details </h1>
        <div class="row inline-field ac">
          <div class="form-group col-md-6">
            <%= f.label :name %><br />
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group col-md-6">
            <%= f.label :inv_nr, 'Inventory Number' %><br />
            <%= f.text_field :inv_nr, autofocus: true, class: "form-control"  %>
          </div>
        </div>
        <div class="row inline-field">
          <div class="form-group col-md-3">
            <%= f.label :quantity %>
            <%= f.number_field :quantity, autocomplete: "off", class: "form-control"  %>
          </div>

          <div class="form-group col-md-3">
            <%= f.label :status  %><br />
            <%= f.collection_select :equipment_status_id, EquipmentStatus.all,:id,:name, include_blank: true, autocomplete: "off", class: "form-control"  %>
          </div>

          <div class="form-group col-md-4">
            <%= f.label :category_id %><br />
            <%= f.collection_select :category_id, Category.all,:id,:name, include_blank: true, autocomplete: "off", class: "form-control dropdown-toggle"  %>
          </div>

        </div>
        <div class="row inline-field">
          <div class="form-group col-md-12">
            <%= f.label :description %>
            <%= f.text_area :description, autocomplete: "off", class: "form-control"  %>
          </div>
        </div>
        <div class="row inline-field">
          <div class="form-group col-md-12">
            <%= f.label :thumb_image %>
            <%= f.text_area :thumb_image, autocomplete: "off", class: "form-control"  %>
          </div>
        </div>
        <div class="row inline-field">
          <div class="form-group col-md-12">
            <%= f.label :main_image %>
            <%= f.text_area :main_image, autocomplete: "off", class: "form-control"  %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit %>
        </div>
    </div>
  </div>
<% end %>

