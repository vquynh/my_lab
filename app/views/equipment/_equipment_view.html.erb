<div class="album text-muted">
  <%= yield %>
  <%= link_to "Register", new_user_session_path, class: "btn btn-secondary" if current_user.is_a?(GuestUser) %>
  <%= link_to "Login", new_user_session_path, class: "btn btn-success" if current_user.is_a?(GuestUser) %>
  <%= link_to "Add New Equipment", new_equipment_path, class: "btn btn-secondary add-new" if logged_in?(:labor_staff) %>

  <div class="row equipment-container">
    <%= render partial: 'labor_item', collection: @labor_items, booking_item: @booking_item %>
  </div>
</div>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<% if session[:source] %>
    <p> Thanks for visiting Mylab from <%= session[:source] %> </p>
<% end %>